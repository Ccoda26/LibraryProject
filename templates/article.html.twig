<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<header>
    {# recupere la variable message de la notif flash en gardant que le messsage #}
    {% for message in app.flashes('success') %}
        <p>
            {{ message }}
        </p>
    {% endfor %}
</header>

    {% for article in articles %}
    <h1>
        <a href="{{ path('articleShow', {'id' : article.id}) }}">{{ article.title }}</a>
    </h1>
        <p><a href="{{ path('update_article', {'id' : article.id}) }}">Update ça</a></p>
        <p><a href="{{ path('delete_article', {'id' : article.id}) }}">Supprime ça</a></p>
    {% endfor %}

</body>
</html>